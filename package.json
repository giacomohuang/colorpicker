{
  "name": "colorpicker-monorepo",
  "private": true,
  "scripts": {
    "demo": "pnpm build:deps && pnpm -F @colorpicker/demo dev",
    "dev:core": "pnpm build:deps && pnpm -F @colorpicker/core dev",
    "dev:docs": "pnpm build:deps && pnpm -F @colorpicker/docs docs:dev",
    "build:docs": "pnpm build:deps && pnpm -F @colorpicker/docs docs:build",
    "dev:demo": "pnpm build:deps && pnpm -F @colorpicker/demo dev",
    "build:demo": "pnpm build:deps && pnpm -F @colorpicker/demo build",
    "build": "pnpm -F @colorpicker/core build",
    "build:deps": "pnpm -F @colorpicker/core build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2"
  }
}
