{
  "name": "colorpicker-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -F @colorpicker/libs dev",
    "dev:docs": "pnpm build:deps && pnpm -F @colorpicker/docs docs:dev",
    "build:docs": "pnpm build:deps && pnpm -F @colorpicker/docs docs:build",
    "build": "pnpm -F @colorpicker/libs build",
    "build:deps": "pnpm -F @colorpicker/libs build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
