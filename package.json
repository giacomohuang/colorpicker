{
  "name": "@mcistudio/colorpicker-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @mcistudio/vue-colorpicker dev",
    "dev:docs": "pnpm build:deps && pnpm --filter @mcistudio/colorpicker-docs docs:dev",
    "build:docs": "pnpm build:deps && pnpm --filter @mcistudio/colorpicker-docs docs:build",
    "build": "pnpm --filter @mcistudio/vue-colorpicker build",
    "build:deps": "pnpm --filter @mcistudio/vue-colorpicker build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
